.site-header
	.map-container
		#map
		#legend.legend
			h4
	ul.navigation.navigation-content
		li 
			a.link.icon(href='https://github.com/Noznoc', target='_blank', title='GitHub')
				i.fa.fa-github-square(aria-hidden='true')
		li
			a.link.icon(href='https://t.co/jMpBYPZXG0', target='_blank', title='LinkedIn')
				i.fa.fa-linkedin-square(aria-hidden='true')
		li
			a.link.icon(href='https://twitter.com/julconz?lang=en', target='_blank', title='Twitter')
				i.fa.fa-twitter-square(aria-hidden='true')
		li
			a.link.icon(href='https://www.openstreetmap.org/user/Noznoc', target='_blank', title='OpenStreetMap')
				i.fa.fa-globe(aria-hidden='true')
	ul.navigation.navigation-site
		li#home 
			a(href='/') home
		li#about
			a(href='/about') about
			.page-content
				a(href='/about/#about-skills') skills
				a(href='/about/#about-work') work
				a(href='/about/#about-education') education
		li#projects 
			a(href='/projects') projects
		li#blog 	
			a(href='/blog') blog
			.page-content
				a(href='/blog/travel') travel
				a(href='/blog/geo') geo
		li#contact 
			a(href='/contact') contact
	script.
		if ('#{page}' == 'about') {
			$('#about').addClass('active');
		} else if ('#{page}' == 'projects') {
			$('#projects').addClass('active');
		} else if ('#{page}' == 'blog') {
			$('#blog').addClass('active');
		} else if ('#{page}' == 'contact') {
			$('#contact').addClass('active');
		} else if ('#{page}' == 'home') {
			$('#home').addClass('active');
		} else {
			$('#blog').addClass('active');
		}