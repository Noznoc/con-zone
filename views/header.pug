	ul.navigation.navigation-site
		li#home home
		li#about about
		li#work work
		li#blog blog
		li#contact contact
	script.
		if ('#{page}' == 'about') {
			$('#about').addClass('active');
		} else if ('#{page}' == 'work') {
			$('#work').addClass('active');
		} else if ('#{page}' == 'blog') {
			$('#blog').addClass('active');
		} else if ('#{page}' == 'contact') {
			$('#contact').addClass('active');
		} else if ('#{page}' == 'home') {
			$('#home').addClass('active');
		} else {
			$('#blog').addClass('active');
		}

		$('ul.navigation-site li').on('click', function() {
			if ($(this).html() == 'home') {
				window.location.href = './';
			} else {
				window.location.href = './' + $(this).html();
			}
		});